{
  "rules": {
    ".read": true,
    ".write": false,
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        "email": {
          ".validate": "newData.isString()"
        },
        "displayName": {
          ".validate": "newData.isString()"
        },
        "loginHistory": {
          "$timestamp": {
            ".validate": "newData.hasChildren(['method', 'success'])"
          }
        },
        "$other": {
          ".validate": true
        }
      }
    },
    "failedLogins": {
      ".read": "auth != null",
      ".write": true,
      "$pushId": {
        ".validate": "newData.hasChildren(['email', 'timestamp', 'error'])"
      }
    },
    "categories": {
      ".read": true,
      ".write": false,
      ".indexOn": ["id", "name"],
      "$category_id": {
        ".read": true,
        ".write": false,
        "products": {
          ".read": true,
          ".write": false,
          "$product_id": {
            ".read": true,
            ".write": false
          }
        }
      }
    }
  }
} 